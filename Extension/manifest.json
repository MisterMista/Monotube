{
  "manifest_version": 2,
  "name": "Monotube",
  "version": "0.3",
  "description": "Stay focused on youtube",

  "browser_action": {

  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/","*://*.youtube.com/watch?v=*"],
      "run_at": "document_start",
      "css": ["content.css"],
      "js": []
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "css": [],
      "js": ["content.js"]
    }
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": ["tabs", "storage"]
}
